<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.jubging.camera.CameraActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_above="@id/texture"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/camera_radius"
        android:src="@drawable/bg_camera_2"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_alignTop="@id/img_bg"
        android:layout_centerHorizontal="true"
        android:text="쓰레기 봉투 인증하기"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="30dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:background="@drawable/camera_radius"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_alignTop="@id/img_bg"
        android:layout_centerHorizontal="true"
        android:text="줍깅을 시작하기 전, \n 쓰레기 봉투를 인증해주세요!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingTop="80dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>


    <com.example.jubging.camera.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txt_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/texture"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="인증 하기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#737373"
        android:background="@drawable/btn_radius"
        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal"/>
</RelativeLayout>